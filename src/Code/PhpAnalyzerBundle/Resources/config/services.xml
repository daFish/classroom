<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="code.php_analyzer.result_builder" class="Code\PhpAnalyzerBundle\ResultBuilder">
            <argument type="service" id="code.analyzer.reflection_service" />
            <argument type="service" id="code.analyzer.chain_analyzer" />
        </service>

        <service id="code.analyzer.chain_analyzer" class="Code\AnalyzerBundle\Analyzer\ChainAnalyzer">
            <argument type="collection" />
        </service>
    </services>
</container>
