<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="code.project.tokenreflection.broker.backend.memory" class="TokenReflection\Broker\Backend\Memory">
        </service>

        <service id="code.project.tokenreflection.broker" class="TokenReflection\Broker">
            <argument type="service" id="code.project.tokenreflection.broker.backend.memory" />
        </service>

        <service id="code.project.classname_service" class="Code\ProjectBundle\ClassnameService">
            <argument type="service" id="code.project.tokenreflection.broker" />
        </service>

        <service id="code.project.merge.classes_merge" class="Code\ProjectBundle\Merger\ClassesMerger">
        </service>

        <service id="code.project.loader" class="Code\ProjectBundle\Loader\SerializeLoader">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.project.writer" class="Code\ProjectBundle\Writer\SerializeWriter">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.project.build.version_strategy" class="Code\ProjectBundle\Build\VersionStrategy\IncrementalVersionStrategy">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.project.build.generator" class="Code\ProjectBundle\Build\BuildGenerator">
            <argument type="service" id="code.project.build.version_strategy" />
        </service>

        <service id="code.project.build.loader" class="Code\ProjectBundle\Build\Loader\SerializeLoader">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.project.build.writer" class="Code\ProjectBundle\Build\Writer\SerializeWriter">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.project.build.comparer" class="Code\ProjectBundle\Build\Comparer\Comparer">
        </service>

    </services>
</container>
