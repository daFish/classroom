<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="code.build.builder" class="Code\BuildBundle\Builder">
            <argument type="service" id="code.analyzer.chain_analyzer" />
            <argument type="service" id="code.repository.factory" />
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.build.loader" class="Code\BuildBundle\Loader\SerializeLoader">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.build.writer" class="Code\BuildBundle\Writer\SerializeWriter">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.build.comparer" class="Code\BuildBundle\Comparer\Comparer">
        </service>
    </services>
</container>
