<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bla.blubb">ccc</parameter>
    </parameters>

    <services>
        <service id="code.copy_paste_detection.phpcpd.executor" class="Code\CopyPasteDetectionBundle\Phpcpd\PhpcpdExecutor">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.copy_paste_detection.phpcpd.parser" class="Code\CopyPasteDetectionBundle\Phpcpd\PhpcpdParser">
        </service>

        <service id="code.copy_paste_detection.phpcpd.mapper" class="Code\CopyPasteDetectionBundle\Phpcpd\PhpcpdMapper">
            <argument type="service" id="code.project.classname_service" />
        </service>

        <service id="code.copy_paste_detection.service" class="Code\CopyPasteDetectionBundle\CopyPasteDetectionService">
            <argument type="service" id="code.copy_paste_detection.phpcpd.executor" />
            <argument type="service" id="code.copy_paste_detection.phpcpd.parser" />
            <argument type="service" id="code.copy_paste_detection.phpcpd.mapper" />
        </service>
    </services>
</container>
