<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bla.blubb">ccc</parameter>
    </parameters>

    <services>
        <service id="code.mess_detection.phpmd.executor" class="Code\MessDetectionBundle\Phpmd\PhpmdExecutor">
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="code.mess_detection.phpmd.parser" class="Code\MessDetectionBundle\Phpmd\PhpmdParser">
        </service>

        <service id="code.mess_detection.phpmd.mapper" class="Code\MessDetectionBundle\Phpmd\PhpmdMapper">
            <argument type="service" id="code.project.classname_service" />
        </service>

        <service id="code.mess_detection.service" class="Code\MessDetectionBundle\MessDetectionService">
            <argument type="service" id="code.mess_detection.phpmd.executor" />
            <argument type="service" id="code.mess_detection.phpmd.parser" />
            <argument type="service" id="code.mess_detection.phpmd.mapper" />
        </service>
    </services>
</container>
