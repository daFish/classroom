<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="code.mess_detection.phpmd.executable">phpmd</parameter>
    </parameters>

    <services>
        <service id="code.mess_detection.phpmd.runner" class="Code\MessDetectionBundle\Phpmd\PhpmdRunner">
            <argument>%code.mess_detection.phpmd.executable%</argument>
        </service>

        <service id="code.mess_detection.phpmd.parser" class="Code\MessDetectionBundle\Phpmd\PhpmdParser">
        </service>

        <service id="code.mess_detection.phpmd.mapper" class="Code\MessDetectionBundle\Phpmd\PhpmdMapper">
            <argument type="service" id="code.analyzer.classname_service" />
        </service>

        <service id="code.mess_detection.phpmd.analyzer" class="Code\AnalyzerBundle\Analyzer\Analyzer">
            <argument type="service" id="code.mess_detection.phpmd.runner" />
            <argument type="service" id="code.mess_detection.phpmd.parser" />
            <argument type="service" id="code.mess_detection.phpmd.mapper" />
            <tag name="code.analyzer" />
        </service>
    </services>
</container>
